<%= render "shared/sidebar" %>
<div class="content">
  <div class="container mx-auto px-2 mt-2">
    <%= form_with(model: @sales_upload, local: true) do |f| %>
      <div class="mx-auto" style="display: flex; gap: 2rem;" data-controller="sales-upload">
        <!-- Drop Zone - Left side -->
        <div class="w-[480px] h-[320px]">
          <div class="upload-zone relative rounded-lg border-2 border-dashed border-gray-300 w-full h-full flex flex-col items-center justify-center cursor-pointer"
               data-sales-upload-target="dropZone"
               data-action="click->sales-upload#triggerFileInput">

            <%= f.file_field :image,
                class: "hidden",
                direct_upload: true,
                accept: "image/jpeg,image/jpg,image/png",
                data: {
                  sales_upload_target: "input",
                  action: "change->sales-upload#handleChange"
                } %>

            <div class="text-center" data-sales-upload-target="initialContent">
              <svg class="mx-auto h-40 w-40 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
              </svg>
              <p class="text-gray-600">Drag your invoice here</p>
              <p class="text-gray-600">or select</p>
              <p class="text-gray-400 mt-2">PNG, JPG (5MB)</p>
            </div>
          </div>
        </div>

        <!-- Preview - Right side -->
        <div class="w-[480px] h-[320px]">
          <div class="w-full h-full bg-gray-50 rounded-lg border border-gray-200">
            <div class="relative w-full h-full">
              <!-- Preview only -->
              <div class="hidden absolute inset-0" data-sales-upload-target="preview">
                <img src="" alt="Preview" class="w-full h-full rounded-lg object-cover">
              </div>

              <!-- Placeholder only -->
              <div class="absolute inset-0 flex items-center justify-center" data-sales-upload-target="placeholder">
                <svg class="h-40 w-40 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
            </div>
          </div>

          <!-- Upload button -->
          <button type="submit" class="mt-4 w-full bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
            Upload Invoice
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
