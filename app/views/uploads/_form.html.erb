<%= form_with(model: @upload, url: uploads_path, local: true, data: { controller: "upload", upload_target: "form" }) do |f| %>
  <div class="mx-auto">
    <!-- Drop Zone - Lado izquierdo -->
    <div>
      <div class="upload-zone relative rounded-lg border-2 border-dashed border-gray-300 w-100 flex justify-center py-8"
           data-upload-target="dropZone">

        <%= f.file_field :image,
            class: "hidden",
            direct_upload: true,
            accept: "image/*",
            data: {
              upload_target: "input",
              action: "change->upload#handleChange"
            } %>

        <div class="text-center" data-upload-target="initialContent">
          <svg class="mx-auto h-50 w-50 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
          </svg>
          <p class="text-gray-600">Drag your photo here</p>
          <p class="text-gray-600">or select PNG, JPG (5MB)</p>
        </div>
      </div>
    </div>

    <!-- Preview - Lado derecho -->
    <div>
      <div class="w-full h-full bg-gray-50 rounded-lg border border-gray-200 flex flex-col items-center justify-center">
        <div class="relative h-full w-full flex flex-col items-center justify-center">
          <!-- Solo el preview -->
          <div class="hidden absolute inset-0 p-4 w-full h-full flex items-center justify-center" data-upload-target="preview">
            <img src="" alt="Preview" class="w-100 rounded-lg object-contain">
          </div>

          <!-- Solo el placeholder -->
          <div class="hidden absolute inset-0 p-4 flex items-center justify-center" data-upload-target="placeholder">
            <svg class="h-40 w-40 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- BotÃ³n de subir -->
      <div class="d-flex justify-content-center mt-3">
        <button type="button" class="btn btn-primary rounded hidden" data-upload-target="submitButton" data-action="upload#submitFormAndRedirect" >
          Upload Image
        </button>
      </div>
    </div>
  </div>
<% end %>
