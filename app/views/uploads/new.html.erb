<!-- Vista uploads/new.html.erb -->
<div class="container mx-auto px-2 mt-2">
  <%= form_with(model: @upload, local: true) do |f| %>
    <div class="mx-auto bg-white rounded shadow p-8"
         style="width: 480px; height: 480px;"> <!-- Tamaño reducido en un 40% -->

      <!-- Flexbox para distribuir el contenido -->
      <div class="flex justify-between w-full h-full">

        <!-- Drop Zone a la izquierda -->
        <div class="upload-zone w-2/3 h-full relative rounded-lg border-2 border-dashed border-gray-300 flex items-center justify-center"
             data-controller="upload"
             data-upload-target="dropZone">

          <%= f.file_field :image,
              class: "hidden",
              direct_upload: true,
              accept: "image/*",
              data: {
                upload_target: "input",
                action: "change->upload#handleChange"
              } %>

          <div class="text-center" data-upload-target="initialContent">
            <svg class="mx-auto h-32 w-32 text-blue-500 mb-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>

            <p class="text-[24px] text-gray-600 leading-tight">Arrastra tu foto aquí dentro</p>
            <p class="text-[24px] text-blue-500 leading-tight">o selecciona</p>
            <p class="text-[20px] text-gray-400 mt-4">PNG, JPG (5MB)</p>
          </div>
        </div>

        <!-- Preview a la derecha -->
        <div class="w-1/3 h-full flex justify-center items-center p-4">
          <div class="mt-10 hidden" data-upload-target="preview">
            <img src="" alt="Preview" class="h-48 w-48 object-cover rounded"> <!-- Vista previa de la imagen -->
            <p class="text-[20px] text-gray-500 mt-4 text-center" data-upload-target="filename"></p>
          </div>
        </div>
      </div>

      <!-- Botón de Submit debajo -->
      <div class="mt-4 flex justify-center">
        <%= f.submit "Subir imagen", class: "bg-blue-500 text-white py-2 px-6 rounded-lg hover:bg-blue-600" %>
      </div>

    </div>
  <% end %>
</div>
