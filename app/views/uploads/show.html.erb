<div class="max-w-2xl mx-auto p-6">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="mb-6">
      <p class="text-gray-500">Uploaded <%= time_ago_in_words(@upload.created_at) %> ago</p>
    </div>

    <div class="rounded-lg overflow-hidden">
      <% if @upload.image.attached? %>
        <%= image_tag @upload.image, class: "w-full h-auto" %>
      <% else %>
        <p class="text-gray-500">No image available</p>
      <% end %>
    </div>

    <div class="mt-6 flex justify-between">
      <%= link_to "Back to uploads", uploads_path,
          class: "text-primary hover:text-primary-dark" %>

      <%= link_to "Upload another image", new_upload_path,
          class: "bg-primary text-white px-4 py-2 rounded hover:bg-primary-dark" %>
    </div>
  </div>
</div>
