wb = xlsx_package.workbook
wb.add_worksheet(name: "Sales") do |sheet|
  sheet.add_row ["Date", "Client First Name", "Client Last Name", "Total Price"]
  @sales.each do |sale|
    sheet.add_row [
      sale.sale_date,
      sale.customer.first_name,
      sale.customer.last_name,
      sale.total_price
    ]
  end
end
