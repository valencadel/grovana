<div class="nested-fields">
  <div class="row">
    <div class="col-md-4">
      <%= f.association :product, 
          collection: Product.all,
          label_method: :name,
          value_method: :id,
          prompt: "Seleccionar producto" %>
    </div>
    <div class="col-md-3">
      <%= f.input :quantity %>
    </div>
    <div class="col-md-3">
      <%= f.input :unit_price %>
    </div>
    <div class="col-md-2">
      <%= link_to_remove_association "Eliminar", f, class: "btn btn-danger" %>
    </div>
  </div>
</div> 