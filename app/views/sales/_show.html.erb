  <div class="content">
    <div class="card">
      <div class="card-header">
        <h2>Sale Details</h2>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <p><strong>Date:</strong> <%= @sale.sale_date %></p>
            <p><strong>Customer:</strong> <%= "#{@sale.customer.first_name} #{@sale.customer.last_name}" %></p>
            <p><strong>Total:</strong> <%= number_to_currency(@sale.total_price) %></p>
          </div>
        </div>

        <h3 class="mt-4">Sold Products</h3>
        <table class="table">
          <thead>
            <tr>
              <th>Product</th>
              <th>Quantity</th>
              <th>Unit Price</th>
              <th>Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <% @sale.sale_details.each do |detail| %>
              <tr>
                <td><%= detail.product.name %></td>
                <td><%= detail.quantity %></td>
                <td><%= number_to_currency(detail.unit_price) %></td>
                <td><%= number_to_currency(detail.quantity * detail.unit_price) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="card-footer">
        <%= link_to edit_sale_path(@sale), class: "btn btn-sm btn-warning rounded" do %>
          <i class="fas fa-edit mr-2"></i>Edit
        <% end %>
        <%= link_to sales_path, class: "btn btn-sm btn-secondary rounded" do %>
          <i class="fas fa-arrow-left mr-2"></i>Back to Sales
        <% end %>
      </div>
    </div>
  </div>
