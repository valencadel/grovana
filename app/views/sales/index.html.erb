<%= render "shared/sidebar" %>

<%= turbo_frame_tag :sale do %>
<div class="content">
  <div class="sm:flex-auto">
        <h1 class="text-2xl font-semibold text-gray-900">Sales</h1>
  </div>
  <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none mb-3">
        <%= link_to new_sale_path,
                    class: "btn btn-primary mb-3 rounded" do %>
          <i class="fas fa-plus mr-2"></i>New Sale
        <% end %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Cliente</th>
        <th>Total</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @sales.each do |sale| %>
        <tr>
          <td><%= sale.sale_date %></td>
          <td><%= "#{sale.customer.first_name} #{sale.customer.last_name}" %></td>
          <td><%= number_to_currency(sale.total_price) %></td>
          <td class="d-flex gap-2">
            <%= link_to "Ver", sale_path(sale), class: "btn btn-sm btn-info" %>
            <%= link_to "Editar", edit_sale_path(sale), class: "btn btn-sm btn-warning" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>
