<%= render "shared/sidebar" %>

<%= turbo_frame_tag :sale do %>
<div class="content">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Ventas</h1>
    <%= link_to "Nueva Venta", new_sale_path, class: "btn btn-primary" %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Cliente</th>
        <th>Total</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @sales.each do |sale| %>
        <tr>
          <td><%= sale.sale_date %></td>
          <td><%= "#{sale.customer.first_name} #{sale.customer.last_name}" %></td>
          <td><%= number_to_currency(sale.total_price) %></td>
          <td class="d-flex gap-2">
            <%= link_to "Ver", sale_path(sale), class: "btn btn-sm btn-info" %>
            <%= link_to "Editar", edit_sale_path(sale), class: "btn btn-sm btn-warning" %>
            <%= link_to "Eliminar",
                sale_path(sale),
                data: {
                  turbo_method: :delete,
                  turbo_confirm: "¿Estás seguro que deseas eliminar esta venta?"
                },
                class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>
