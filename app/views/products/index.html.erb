<%= render "shared/sidebar" %>
<%= turbo_frame_tag :product do %>
  <div class="content">
    <div class="sm:flex-auto">
        <h1 class="text-2xl font-semibold text-gray-900">Products</h1>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none mb-3">
        <%= link_to new_product_path,
                    class: "btn btn-primary mb-3 rounded" do %>
          <i class="fas fa-plus mr-2"></i>New Product
        <% end %>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>SKU</th>
          <th>Category</th>
          <th>Stock</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.sku %></td>
            <td> <%= product.category %> </td>
            <td><%= product.stock %></td>
            <td>
              <%= link_to 'Ver', product_path(product), class: 'btn btn-info' %>
              <%= link_to 'Editar', edit_product_path(product), class: 'btn btn-warning' if policy(product).edit? %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
