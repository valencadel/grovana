<%= render "shared/sidebar" %>

<style>
  .wrapper {
    display: flex;
    min-height: 100vh;
  }

  .sidebar {
    width: 250px;
    background-color: #1e1b4b;
    position: fixed;
    height: 100vh;
    overflow-y: auto;
  }

  .main-content {
    flex: 1;
    margin-left: 250px;
    background-color: #f8fafc;
    min-height: 100vh;
    padding: 2rem 2.5rem;
  }

  .content-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .kpi-card {
    background: white;
    border-radius: 0.5rem;
    padding: 1.25rem;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    border: 1px solid #e5e7eb;
  }

  .kpi-title {
    font-size: 0.875rem;
    color: #6b7280;
    font-weight: 500;
  }

  .kpi-value {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    margin-top: 0.25rem;
  }

  .progress-bar {
    width: 100%;
    height: 4px;
    background-color: #f3f4f6;
    border-radius: 9999px;
    margin-top: 0.75rem;
  }

  .progress-value {
    height: 100%;
    border-radius: 9999px;
  }

  .chart-container {
    background: white;
    border-radius: 0.5rem;
    padding: 1.25rem;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    border: 1px solid #e5e7eb;
  }

  .chart-title, .pie-chart-title {
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151;
    margin-bottom: 1rem;
    padding-top: 1rem;
    padding-left: 1rem;
  }

  .filter-container {
    background: white;
    border-radius: 0.5rem;
    padding: 1.25rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    border: 1px solid #e5e7eb;
  }

  .filter-input {
    border: 1px solid #e5e7eb;
    border-radius: 0.375rem;
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
  }

  .filter-button {
    background-color: #3b82f6;
    color: white;
    padding: 0.375rem 1rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    border: none;
    transition: background-color 0.2s;
  }

  .filter-button:hover {
    background-color: #2563eb;
  }
</style>

<div class="wrapper">
  <%= render "shared/sidebar" %>

  <div class="main-content">
    <div class="content-container">
      <%= turbo_frame_tag "dashboard_content" do %>
        <!-- Filtro -->
        <div class="filter-container">
          <%= form_tag dashboard_path, method: :get, data: { turbo_frame: "dashboard_content" } do %>
            <div style="display: flex; gap: 1rem; align-items: center;">
              <div style="display: flex; align-items: center; gap: 0.5rem;">
                <label class="kpi-title">Desde:</label>
                <%= date_field_tag :start_date, params[:start_date], class: "filter-input" %>
              </div>
              <div style="display: flex; align-items: center; gap: 0.5rem;">
                <label class="kpi-title">Hasta:</label>
                <%= date_field_tag :end_date, params[:end_date], class: "filter-input" %>
              </div>
              <%= submit_tag "Filtrar", class: "filter-button" %>
            </div>
          <% end %>
        </div>

        <!-- KPIs -->
        <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 1.5rem; margin-bottom: 1.5rem;">
          <!-- Total Clientes -->
          <div class="kpi-card">
            <div class="kpi-title">Total Clientes</div>
            <div class="kpi-value"><%= @total_customers %></div>
            <div class="progress-bar">
              <div class="progress-value" style="width: 40%; background-color: #10b981;"></div>
            </div>
          </div>

          <!-- Total Compras -->
          <div class="kpi-card">
            <div class="kpi-title">Total Compras</div>
            <div class="kpi-value"><%= @total_purchases %></div>
            <div class="progress-bar">
              <div class="progress-value" style="width: 60%; background-color: #ef4444;"></div>
            </div>
          </div>

          <!-- Total Ventas -->
          <div class="kpi-card">
            <div class="kpi-title">Total Ventas</div>
            <div class="kpi-value"><%= @total_sales %></div>
            <div class="progress-bar">
              <div class="progress-value" style="width: 75%; background-color: #f59e0b;"></div>
            </div>
          </div>

          <!-- Otro KPI -->
          <div class="kpi-card">
            <div class="kpi-title">Total Ventas ($)</div>
            <div class="kpi-value"><%= number_to_currency(@total_sales_amount, precision: 0, delimiter: ".", unit: "") %></div>
            <div class="progress-bar">
              <div class="progress-value" style="width: 25%; background-color: #6366f1;"></div>
            </div>
          </div>
        </div>

        <!-- Gráficos -->
        <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.5rem;" data-turbo="false">
          <!-- Ventas por Mes -->
          <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
            <div class="chart-title">Ventas por Mes</div>
            <%= column_chart @sales_by_month,
                colors: ["#3b82f6"],
                height: "200px",
                loading: "Cargando...",
                library: {
                  scales: {
                    x: {
                      grid: { display: false },
                      ticks: {
                        autoSkip: false,
                        maxRotation: 45,
                        minRotation: 45
                      }
                    },
                    y: {
                      grid: { display: false },
                      ticks: { padding: 10 }
                    }
                  },
                  elements: {
                    bar: {
                      borderRadius: 4,
                      borderWidth: 0
                    }
                  }
                } %>
          </div>

          <!-- Compras por Mes -->
          <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
            <div class="chart-title">Compras por Mes</div>
            <%= column_chart @purchases_by_month,
                colors: ["#ef4444"],
                height: "200px",
                loading: "Cargando...",
                library: {
                  scales: {
                    x: {
                      grid: { display: false },
                      ticks: {
                        autoSkip: false,
                        maxRotation: 45,
                        minRotation: 45
                      }
                    },
                    y: {
                      grid: { display: false },
                      ticks: { padding: 10 }
                    }
                  },
                  elements: {
                    bar: {
                      borderRadius: 4,
                      borderWidth: 0
                    }
                  }
                } %>
          </div>

          <!-- Ventas por Método de Pago -->
          <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
            <div class="pie-chart-title">Ventas por Método de Pago</div>
            <%= pie_chart @sales_by_payment,
                colors: ["#3b82f6", "#ef4444", "#10b981"],
                height: "200px",
                loading: "Cargando...",
                library: {
                  plugins: {
                    legend: {
                      position: 'bottom',
                      labels: { font: { size: 11 } }
                    }
                  }
                } %>
          </div>

          <!-- Compras por Proveedor -->
          <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
            <div class="pie-chart-title">Compras por Proveedor</div>
            <%= pie_chart @purchases_by_supplier,
                colors: ["#3b82f6", "#ef4444", "#10b981", "#f59e0b", "#6366f1"],
                height: "200px",
                loading: "Cargando...",
                library: {
                  plugins: {
                    legend: {
                      position: 'bottom',
                      labels: { font: { size: 11 } }
                    }
                  }
                } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
