<%= render "shared/sidebar" %>

<style>
  .wrapper {
    display: flex;
    min-height: 100vh;
  }

  .sidebar {
    width: 250px;
    background-color: #1e1b4b;
    position: fixed;
    height: 100vh;
    overflow-y: auto;
  }

  .main-content {
    flex: 1;
    margin-left: 250px;
    background-color: #f8fafc;
    min-height: 100vh;
    padding: 2rem 2.5rem;
  }

  .content-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .kpi-card {
    background: white;
    border-radius: 0.5rem;
    padding: 1.25rem;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    border: 1px solid #e5e7eb;
  }

  .kpi-title {
    font-size: 0.875rem;
    color: #6b7280;
    font-weight: 500;
  }

  .kpi-value {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
  }

  .progress-bar {
    width: 100%;
    height: 4px;
    background-color: #f3f4f6;
    border-radius: 9999px;
    margin-top: 0.75rem;
  }

  .progress-value {
    height: 100%;
    border-radius: 9999px;
  }

  .chart-container {
    background: white;
    border-radius: 0.5rem;
    padding: 1.25rem;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    border: 1px solid #e5e7eb;
  }

  .chart-title, .pie-chart-title {
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151;
    margin-bottom: 1rem;
    padding-top: 1rem;
    padding-left: 1rem;
  }

  .filter-container {
    background: white;
    border-radius: 0.5rem;
    padding: 1.25rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    border: 1px solid #e5e7eb;
  }

  .filter-input {
    border: 1px solid #e5e7eb;
    border-radius: 0.375rem;
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
  }

  .filter-button {
    background-color: #3b82f6;
    color: white;
    padding: 0.375rem 1rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    border: none;
    transition: background-color 0.2s;
  }

  .filter-button:hover {
    background-color: #2563eb;
  }

  /* Floating Plus Button Style */
.floating-button {
  position: fixed;
  width: 60px;
  height: 60px;
  bottom: 40px;
  right: 40px;
  background-color: #3b82f6; /* Adjust color as needed */
  color: white;
  border-radius: 50%;
  text-align: center;
  font-size: 30px;
  box-shadow: 2px 2px 3px rgba(0, 0, 0, 0.3);
  z-index: 1000;
}

.floating-button i {
  margin-top: 15px;
}

.floating-button:hover {
  background-color: #2563eb; /* Darken on hover */
}
</style>

<div class="wrapper">
  <%= render "shared/sidebar" %>

  <div class="main-content">
    <div class="content-container">
      <%= turbo_frame_tag "dashboard_content" do %>
        <!-- Filtro -->
        <div class="filter-container">
          <%= form_tag dashboard_path, method: :get, data: { turbo_frame: "dashboard_content" } do %>
            <div style="display: flex; gap: 1rem; align-items: center;">
              <div style="display: flex; align-items: center; gap: 0.5rem;">
                <label class="kpi-title">Desde:</label>
                <%= date_field_tag :start_date, params[:start_date], class: "filter-input" %>
              </div>
              <div style="display: flex; align-items: center; gap: 0.5rem;">
                <label class="kpi-title">Hasta:</label>
                <%= date_field_tag :end_date, params[:end_date], class: "filter-input" %>
              </div>
              <%= submit_tag "Filter", class: "filter-button" %>
              <%= link_to "Reset", dashboard_path, class: "filter-button", style: "background-color: #ef4444; text-decoration: none;" %>
            </div>
          <% end %>
        </div>

<!-- KPIs -->
<div style="display: grid; grid-template-columns: repeat(5, 1fr); gap: 1.5rem; margin-bottom: 1.5rem;">
  <!-- Total Clientes -->
  <div class="kpi-card relative">
    <div style="position: absolute; top: 1rem; right: 1rem;">
      <i class="fas fa-users text-gray-400 text-xl"></i>
    </div>
    <div class="kpi-title">Total Clientes</div>
    <div style="display: flex; align-items: baseline; margin-top: 0.25rem;">
      <div class="kpi-value" style="margin: 0;"><%= @total_customers %></div>
      <span style="font-size: 12px; margin-left: 6px; color: <%= @customers_change.positive? ? '#10b981' : '#ef4444' %>">
        <i class="fas fa-<%= @customers_change.positive? ? 'arrow-up' : 'arrow-down' %>"></i>
        <%= @customers_change %>%
      </span>
    </div>
    <div class="progress-bar">
      <div class="progress-value" style="width: 100%; background-color: #3b82f6;"></div>
    </div>
  </div>

  <!-- Total Compras -->
  <div class="kpi-card relative">
    <div style="position: absolute; top: 1rem; right: 1rem;">
      <i class="fas fa-shopping-cart text-gray-400 text-xl"></i>
    </div>
    <div class="kpi-title">Total Compras</div>
    <div style="display: flex; align-items: baseline; margin-top: 0.25rem;">
      <div class="kpi-value" style="margin: 0;"><%= @total_purchases %></div>
      <span style="font-size: 12px; margin-left: 6px; color: <%= @purchases_change.positive? ? '#10b981' : '#ef4444' %>">
        <i class="fas fa-<%= @purchases_change.positive? ? 'arrow-up' : 'arrow-down' %>"></i>
        <%= @purchases_change %>%
      </span>
    </div>
    <div class="progress-bar">
      <div class="progress-value" style="width: 100%; background-color: #ef4444;"></div>
    </div>
  </div>

  <!-- Total Compras ($) -->
  <div class="kpi-card relative">
    <div style="position: absolute; top: 1rem; right: 1rem;">
      <i class="fas fa-dollar-sign text-gray-400 text-xl"></i>
    </div>
    <div class="kpi-title">Total Compras ($)</div>
    <div style="display: flex; align-items: baseline; margin-top: 0.25rem;">
      <div class="kpi-value" style="margin: 0;"><%= number_to_currency(@total_purchases_amount, precision: 0, delimiter: ".", unit: "") %></div>
      <span style="font-size: 12px; margin-left: 6px; color: <%= @purchases_amount_change.positive? ? '#10b981' : '#ef4444' %>">
        <i class="fas fa-<%= @purchases_amount_change.positive? ? 'arrow-up' : 'arrow-down' %>"></i>
        <%= @purchases_amount_change %>%
      </span>
    </div>
    <div class="progress-bar">
      <div class="progress-value" style="width: 100%; background-color: #ef4444;"></div>
    </div>
  </div>

  <!-- Total Ventas -->
  <div class="kpi-card relative">
    <div style="position: absolute; top: 1rem; right: 1rem;">
      <i class="fas fa-chart-line text-gray-400 text-xl"></i>
    </div>
    <div class="kpi-title">Total Ventas</div>
    <div style="display: flex; align-items: baseline; margin-top: 0.25rem;">
      <div class="kpi-value" style="margin: 0;"><%= @total_sales %></div>
      <span style="font-size: 12px; margin-left: 6px; color: <%= @sales_change.positive? ? '#10b981' : '#ef4444' %>">
        <i class="fas fa-<%= @sales_change.positive? ? 'arrow-up' : 'arrow-down' %>"></i>
        <%= @sales_change %>%
      </span>
    </div>
    <div class="progress-bar">
      <div class="progress-value" style="width: 100%; background-color: #10b981;"></div>
    </div>
  </div>

  <!-- Total Ventas ($) -->
  <div class="kpi-card relative">
    <div style="position: absolute; top: 1rem; right: 1rem;">
      <i class="fas fa-coins text-gray-400 text-xl"></i>
    </div>
    <div class="kpi-title">Total Ventas ($)</div>
    <div style="display: flex; align-items: baseline; margin-top: 0.25rem;">
      <div class="kpi-value" style="margin: 0;"><%= number_to_currency(@total_sales_amount, precision: 0, delimiter: ".", unit: "") %></div>
      <span style="font-size: 12px; margin-left: 6px; color: <%= @sales_amount_change.positive? ? '#10b981' : '#ef4444' %>">
        <i class="fas fa-<%= @sales_amount_change.positive? ? 'arrow-up' : 'arrow-down' %>"></i>
        <%= @sales_amount_change %>%
      </span>
    </div>
    <div class="progress-bar">
      <div class="progress-value" style="width: 100%; background-color: #10b981;"></div>
    </div>
  </div>
</div>

        <!-- Gráficos -->
        <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.5rem;" data-turbo="false">
          <!-- Ventas por Mes -->
          <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
            <div class="chart-title">Ventas por Mes</div>
            <%= column_chart @sales_by_month,
                colors: ["#3b82f6"],
                height: "200px",
                loading: "Cargando...",
                library: {
                  scales: {
                    x: {
                      grid: { display: false },
                      ticks: {
                        autoSkip: false,
                        maxRotation: 45,
                        minRotation: 45
                      }
                    },
                    y: {
                      grid: { display: false },
                      ticks: { padding: 10 }
                    }
                  },
                  elements: {
                    bar: {
                      borderRadius: 4,
                      borderWidth: 0
                    }
                  }
                } %>
          </div>

          <!-- Compras por Mes -->
          <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
            <div class="chart-title">Compras por Mes</div>
            <%= column_chart @purchases_by_month,
                colors: ["#ef4444"],
                height: "200px",
                loading: "Cargando...",
                library: {
                  scales: {
                    x: {
                      grid: { display: false },
                      ticks: {
                        autoSkip: false,
                        maxRotation: 45,
                        minRotation: 45
                      }
                    },
                    y: {
                      grid: { display: false },
                      ticks: { padding: 10 }
                    }
                  },
                  elements: {
                    bar: {
                      borderRadius: 4,
                      borderWidth: 0
                    }
                  }
                } %>
          </div>

          <!-- Ventas por Método de Pago -->
          <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
            <div class="pie-chart-title">Ventas por Método de Pago</div>
            <%= pie_chart @sales_by_payment,
                colors: ["#3b82f6", "#ef4444", "#f59e0b", "#10b981"],
                height: "200px",
                loading: "Cargando...",
                library: {
                  plugins: {
                    legend: {
                      position: 'bottom',
                      labels: {
                        font: { size: 11 },
                        padding: 20
                      }
                    }
                  },
                  cutout: '70%'
                } %>
          </div>

          <!-- Compras por Proveedor -->
          <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
            <div class="pie-chart-title">Compras por Proveedor</div>
            <%= pie_chart @purchases_by_supplier,
                colors: ["#3b82f6", "#ef4444", "#f59e0b", "#10b981"],
                height: "200px",
                loading: "Cargando...",
                library: {
                  plugins: {
                    legend: {
                      position: 'bottom',
                      labels: {
                        font: { size: 11 },
                        padding: 20
                      }
                    }
                  },
                  cutout: '70%'
                } %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Floating Plus Button -->
    <%= link_to doc_gemini_path, class: "floating-button" do %>
      <i class="fas fa-plus"></i>
    <% end %>
  </div>
</div>
