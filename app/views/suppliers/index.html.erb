<%= render "shared/sidebar" %>
<%= turbo_frame_tag :supplier do %>
  <div class="content">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900">Suppliers</h1>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none mb-3">
      <%= link_to new_supplier_path, class: "btn btn-primary mb-3 rounded" do %>
        <i class="fas fa-plus mr-2"></i> New Supplier
      <% end %>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>Company Name</th>
          <th>Contact Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Tax ID</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @suppliers.each do |supplier| %>
          <tr>
            <td><%= supplier.company_name %></td>
            <td><%= supplier.contact_name %></td>
            <td><%= supplier.email %></td>
            <td><%= supplier.phone %></td>
            <td><%= supplier.tax_id %></td>
            <td class="d-flex gap-2">
              <%= link_to "View", supplier_path(supplier), class: "btn btn-sm btn-info" %>
              <%= link_to "Edit", edit_supplier_path(supplier), class: "btn btn-sm btn-warning" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
