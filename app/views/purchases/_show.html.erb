  <div class="content">
    <div class="card">
      <div class="card-header">
        <h2>Purchase Details</h2>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <p><strong>Order Date:</strong> <%= @purchase.order_date %></p>
            <p><strong>Expected Delivery Date:</strong> <%= @purchase.expected_delivery_date %></p>
            <p><strong>Total Price:</strong> <%= number_to_currency(@purchase.total_price) %></p>
            <p><strong>Supplier:</strong> <%= @purchase.supplier.company_name %></p>
          </div>
        </div>

        <h3 class="mt-4">Product Details</h3>
        <table class="table">
          <thead>
            <tr>
              <th>Product</th>
              <th>Quantity</th>
              <th>Unit Price</th>
              <th>Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <% @purchase.purchase_details.each do |detail| %>
              <tr>
                <td><%= detail.product.name %></td>
                <td><%= detail.quantity %></td>
                <td><%= number_to_currency(detail.unit_price) %></td>
                <td><%= number_to_currency(detail.quantity * detail.unit_price) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="card-footer">
        <%= link_to edit_purchase_path(@purchase), class: "btn btn-sm btn-warning rounded" do %>
          <i class="fas fa-edit mr-2"></i>Edit
        <% end %>
        <%= link_to purchases_path, class: "btn btn-sm btn-secondary rounded" do %>
          <i class="fas fa-arrow-left mr-2"></i>Back to Purchases
        <% end %>
      </div>
    </div>
  </div>
