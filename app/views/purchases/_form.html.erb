<div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
  <%= form_with(model: @purchase, class: "space-y-8 divide-y divide-gray-200", data: { controller: "purchases-form" }) do |f| %>
    <div class="space-y-8 divide-y divide-gray-200">
      <!-- Información básica -->
      <div>
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900">Información básica</h3>
        </div>

        <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <!-- Fecha -->
          <div class="sm:col-span-3">
            <%= f.label :order_date, "Fecha", class: "block text-sm font-medium text-gray-700" %>
            <%= f.date_field :order_date, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <!-- Proveedor -->
          <div class="sm:col-span-3">
            <%= f.label :supplier_id, "Proveedor", class: "block text-sm font-medium text-gray-700" %>
            <%= f.collection_select :supplier_id, @suppliers, :id, :company_name,
                { prompt: "Seleccionar proveedor" },
                { class: "mt-1 block w-full bg-white border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>
        </div>
      </div>

      <!-- Detalles de Productos -->
      <div class="pt-8">
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900">Detalles de Productos</h3>
        </div>

        <div class="mt-6">
          <!-- Categoría -->
          <div class="mb-4">
            <%= label_tag :category, "Category", class: "block text-sm font-medium text-gray-700" %>
            <%= select_tag :category,
                          options_for_select(@products.pluck(:category).uniq.compact),
                          {
                            prompt: "Seleccionar categoría",
                            class: "mt-1 block w-full bg-white border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                            data: {
                              purchases_form_target: "categorySelect",
                              action: "change->purchases-form#filterProducts"
                            }
                          } %>
          </div>

          <!-- Producto -->
          <div class="mb-4">
            <%= label_tag :product_id, "Product", class: "block text-sm font-medium text-gray-700" %>
            <%= select_tag :product_id,
                          options_for_select(
                            @products.map { |p|
                              [
                                p.name,
                                p.id,
                                {
                                  'data-price' => number_with_precision(p.price, precision: 2),
                                  'data-category' => p.category
                                }
                              ]
                            }
                          ),
                          {
                            prompt: "Seleccionar producto",
                            class: "mt-1 block w-full bg-white border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                            data: {
                              purchases_form_target: "productSelect",
                              action: "change->purchases-form#updatePrice"
                            }
                          } %>
          </div>

          <!-- Cantidad -->
          <div class="mb-4">
            <%= label_tag :quantity, "Quantity *", class: "block text-sm font-medium text-gray-700" %>
            <%= number_field_tag :quantity,
                              1,
                              min: 1,
                              class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                              data: { purchases_form_target: "quantityInput" } %>
          </div>

          <!-- Precio Unitario -->
          <div class="mb-4">
            <%= label_tag :unit_price, "Unit price *", class: "block text-sm font-medium text-gray-700" %>
            <%= text_field_tag :unit_price,
                            "0.00",
                            class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm bg-gray-50",
                            readonly: true,
                            data: { purchases_form_target: "unitPriceDisplay" } %>
          </div>

          <!-- Botón Agregar -->
          <div class="mt-4">
            <button type="button"
                    class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500"
                    data-action="click->purchases-form#addProduct">
              Agregar Producto
            </button>
          </div>
        </div>

        <!-- Lista de Productos -->
        <div class="mt-6">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Producto</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Precio Unit.</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Cantidad</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200" data-purchases-form-target="productsList">
              <!-- Los productos se agregarán aquí dinámicamente -->
            </tbody>
          </table>
        </div>
      </div>

      <!-- Total y Botones -->
      <div class="pt-8">
        <div class="flex justify-between items-center">
          <div class="text-lg font-medium text-gray-900">
            Total: $<span data-purchases-form-target="total">0.00</span>
            <%= f.hidden_field :total_price, data: { purchases_form_target: "totalInput" } %>
          </div>
          <div class="flex space-x-3">
            <%= link_to "Cancelar", purchases_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <%= f.submit "Guardar", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
