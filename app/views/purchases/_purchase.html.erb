<%= turbo_frame_tag purchase do %>
<tr>
  <td><%= purchase.order_date %></td>
  <td><%= purchase.expected_delivery_date %></td>
  <td><%= number_to_currency(purchase.total_price) %></td>
  <td><%= purchase.supplier.company_name %></td>
  <td class="d-flex gap-2">
    <%= link_to purchase_path(purchase), class: "btn btn-sm btn-info rounded" do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <%= link_to edit_purchase_path(purchase), class: "btn btn-sm btn-warning rounded" do %>
      <i class="fas fa-edit"></i>
    <% end %>
    <%= link_to purchase_path(purchase),
                data: {  controller: "alert",
                              alert_icon_value: "warning",
                              alert_title_value: "¿Estás seguro?",
                              alert_html_value: "Eliminar esta compra.",
                              alert_confirm_button_text_value: "¡Sí, eliminar!",
                              alert_show_cancel_button_value: true,
                              alert_cancel_button_text_value: "Cancelar",
                              action: "click->alert#confirmDelete",
                              turbo: false},
                class: "btn btn-sm btn-danger rounded" do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr>

<% end %>
