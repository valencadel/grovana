<%= render "shared/sidebar" %>
<%= turbo_frame_tag :customer do %>
  <div class="content">
    <div class="sm:flex-auto">
        <h1 class="text-2xl font-semibold text-gray-900">Customers</h1>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none mb-3">
        <%= link_to new_customer_path,
                    class: "btn btn-primary mb-3 rounded" do %>
          <i class="fas fa-plus mr-2"></i>New Client
        <% end %>
      </div>
    <table class="table">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Email</th>
          <th>Teléfono</th>
          <th>Dirección</th>
          <th>ID Fiscal</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= "#{customer.first_name} #{customer.last_name}" %></td>
            <td><%= customer.email %></td>
            <td><%= customer.phone %></td>
            <td><%= customer.address %></td>
            <td><%= customer.tax_id %></td>
            <td class="d-flex gap-2">
              <%= link_to "Ver", customer_path(customer), class: "btn btn-sm btn-info" %>
              <%= link_to "Editar", edit_customer_path(customer), class: "btn btn-sm btn-warning" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
