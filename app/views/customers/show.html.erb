<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2>Detalles del Cliente</h2>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <p><strong>Nombre:</strong> <%= "#{@customer.first_name} #{@customer.last_name}" %></p>
          <p><strong>Email:</strong> <%= @customer.email %></p>
          <p><strong>Teléfono:</strong> <%= @customer.phone %></p>
          <p><strong>Dirección:</strong> <%= @customer.address %></p>
          <p><strong>ID Fiscal:</strong> <%= @customer.tax_id %></p>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= link_to "Editar", edit_customer_path(@customer), class: "btn btn-warning" %>
      <%= link_to "Volver", customers_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div> 