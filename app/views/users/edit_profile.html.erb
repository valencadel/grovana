<%= turbo_frame_tag :user do %>
  <div class="content">
    <div class="max-w-3xl mx-auto">
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h1 class="text-2xl font-bold mb-6">Editar Perfil</h1>
          
          <%= simple_form_for @user, url: update_profile_users_path, method: :patch do |f| %>
            <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
              <%= f.input :first_name,
                        required: true,
                        label: 'Nombre',
                        input_html: { class: 'form-input' } %>

              <%= f.input :last_name,
                        required: true,
                        label: 'Apellido',
                        input_html: { class: 'form-input' } %>

              <%= f.input :email,
                        required: true,
                        input_html: { class: 'form-input' } %>
            </div>

            <div class="border-t border-gray-200 mt-6 pt-6">
              <h2 class="text-lg font-medium mb-4">Cambiar Contraseña</h2>
              <div class="grid grid-cols-1 gap-y-6">
                <%= f.input :current_password,
                          label: 'Contraseña actual',
                          required: false,
                          input_html: { class: 'form-input' },
                          hint: 'Necesitamos tu contraseña actual para confirmar los cambios' %>

                <%= f.input :password,
                          label: 'Nueva contraseña',
                          required: false,
                          input_html: { class: 'form-input' },
                          hint: 'Dejar en blanco si no deseas cambiarla' %>

                <%= f.input :password_confirmation,
                          label: 'Confirmar nueva contraseña',
                          required: false,
                          input_html: { class: 'form-input' } %>
              </div>
            </div>

            <div class="mt-6 flex items-center justify-end gap-x-6">
              <%= link_to 'Cancelar', profile_users_path, class: "btn btn-secondary" %>
              <%= f.submit 'Guardar', class: "btn btn-primary", data: { disable_with: 'Guardando...' } %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %> 