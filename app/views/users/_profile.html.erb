<div class="content">
  <div class="card">
    <div class="card-header">
      <h2>User Profile</h2>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <p><strong>Name:</strong> <%= "#{@user.first_name} #{@user.last_name}" %></p>
          <p><strong>Email:</strong> <%= @user.email %></p>
          <p><strong>Company:</strong> <%= @user.companies.first.name %></p>
          <p><strong>Registration Date:</strong> <%= @user.created_at.strftime("%d/%m/%Y %H:%M") %></p>
        </div>
      </div>
    </div>
    <div class="card-footer d-flex gap-2">
      <%= link_to edit_profile_users_path, class: "btn btn-sm btn-warning rounded" do %>
        <i class="fas fa-edit mr-2"></i>Edit Profile
      <% end %>
      <%= button_to destroy_user_session_path,
          method: :delete,
          class: "btn btn-sm btn-danger rounded",
          data: { turbo: true, turbo_confirm: 'Are you sure you want to log out?' } do %>
        <i class="fas fa-sign-out-alt mr-2"></i>Log Out
      <% end %>
    </div>
  </div>
</div> 