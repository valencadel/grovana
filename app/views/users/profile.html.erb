<%= render "shared/sidebar" %>
<%= turbo_frame_tag :user do %>
  <div class="content">
    <div class="max-w-3xl mx-auto">
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Mi Perfil</h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">Información personal y detalles de la cuenta</p>
        </div>

        <div class="border-t border-gray-200">
          <dl>
            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Nombre</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @user.first_name %></dd>
            </div>

            <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Apellido</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @user.last_name %></dd>
            </div>

            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Email</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @user.email %></dd>
            </div>

            <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Empresa</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @user.companies.first.name %></dd>
            </div>

            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Fecha de registro</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:col-span-2">
                <%= @user.created_at.strftime("%d/%m/%Y %H:%M") %>
              </dd>
            </div>
          </dl>
        </div>

        <div class="px-4 py-5 sm:px-6 border-t border-gray-200">
          <div class="flex justify-end gap-2">
            <%= link_to edit_profile_users_path,
                class: "btn btn-primary inline-flex items-center" do %>
              <i class="fas fa-edit mr-2"></i>
              Editar Perfil
            <% end %>

            <%= button_to destroy_user_session_path,
                method: :delete,
                class: "btn btn-danger inline-flex items-center",
                data: { turbo: true, turbo_confirm: '¿Estás seguro de cerrar sesión?' } do %>
              <i class="fas fa-sign-out-alt mr-2"></i>
              Cerrar Sesión
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %> 