<%= turbo_frame_tag :employee do %>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="max-w-md mx-auto">
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h1 class="text-lg font-medium leading-6 text-gray-900">Cambiar Contraseña</h1>

          <%= form_with(model: @employee, url: update_password_employees_path, method: :patch, class: "mt-5") do |f| %>
            <div class="space-y-4">
              <div>
                <%= f.label :current_password, "Contraseña actual", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.password_field :current_password, class: "input-field" %>
                </div>
              </div>

              <div>
                <%= f.label :password, "Nueva contraseña", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.password_field :password, class: "input-field" %>
                </div>
              </div>

              <div>
                <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.password_field :password_confirmation, class: "input-field" %>
                </div>
              </div>

              <div class="flex justify-end gap-3">
                <%= link_to "Cancelar", profile_employees_path, class: "btn btn-secondary" %>
                <%= f.submit "Actualizar contraseña", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
