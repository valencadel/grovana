<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="max-w-md mx-auto">
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h1 class="text-lg font-medium leading-6 text-gray-900">Restablecer Contrase単a</h1>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <div class="space-y-4">
            <div>
              <%= f.label :password, "Nueva contrase単a", class: "block text-sm font-medium text-gray-700" %>
              <%= f.password_field :password, class: "input-field" %>
            </div>

            <div>
              <%= f.label :password_confirmation, "Confirmar nueva contrase単a", class: "block text-sm font-medium text-gray-700" %>
              <%= f.password_field :password_confirmation, class: "input-field" %>
            </div>

            <div class="flex justify-end gap-3">
              <%= f.submit "Cambiar mi contrase単a", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
